
/* Homepage
--------------------------------------------- */

body
  position relative

.initial-state
  top 30px

.container
  height 100vh
  margin 0 auto
  overflow hidden
  padding 0
  position relative

  +above($sm-phone)
    padding 0

  +above($phone)
    min-height 760px
    padding 0


.hero_content
  margin 0 auto
  margin-top 120px
  overflow hidden
  padding 0 15px
  z-index 100

  +above($sm-phone)
    padding 10px

  h1
    margin 0 auto
    max-width 540px

  .lead
    margin 0 auto
    padding 10px 0

    +above($phone)
      max-width 460px

.content
  margin 0 auto
  max-width 620px

.video_content
  background $light
  bottom -10px
  overflow hidden
  padding 20px 0 0 0
  position absolute
  width 100%

  +above($phone)
    bottom -110px
    padding 60px 0 0 0

  .video
    display block
    margin 0 auto
    max-width 900px
    padding 0 20px

    +above($phone)
      padding 0 40px

.feature_content
  clear both
  margin 160px 0
  position relative
  width 100%

.column
  margin 0 180px
  position relative

  .text_left
    float right
    max-width 600px
    padding 60px

  .text_right
    float left
    max-width 600px
    padding 60px

  .image
    max-width 580px

  column(1, cycle: 1, gutter: 1)
  padding-bottom 80px

  +above($tablet)
    column(1/2, cycle: 2, gutter: 5, uncycle: 1)

.signup_content
  background $light
  clear both
  margin 0 auto
  overflow hidden
  padding 80px 0
  position relative

.footer
  img
    width 60px
