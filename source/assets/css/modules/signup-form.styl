.signup-form
  padding 20px 10px
  align-items center
  position relative
  margin-top 20px

  +above($sm-phone)
    padding 20px 10px

  .fields
    width 100%
    margin 0 auto

    +above($phablet)
      width 500px

    .left
      width 100%
      padding-right 100px
      margin 0 6px

      +above($phablet)
        padding 0
        float left
        width 210px

    .right
      width 100%
      margin 0 6px
      padding-right 100px

      +above($phablet)
        padding 0
        float left
        width 210px

.submit-button
  line-height 1
  margin 0 10px
  float left
  border 3px solid $slate
  padding px 30px 6px 30px
  border-radius 100px
  background white
  cursor pointer
  display block
  width 55px
  height 55px
  transition all 600ms $bounce
  position absolute
  right 5px
  top 50px

  +above($phablet)
    width 40px
    height 40px
    right 60px
    top 20px

  &:hover
    border-color $copper
    transform scale(1.1)

  &:active
    transform scale(.9)

  .arrow
    top 0
    margin -14px 0 0 2px
    padding 7px

    +above($phablet)
      padding 0

.signup-form__success
  padding-left 1rem
  padding-right 1rem
  max-width 320px
  margin-left auto
  margin-right auto

.form-input
  font-size 14px
  font-family $body-font
  box-shadow none
  border none
  border-bottom 1px solid $concrete
  line-height 2rem
  margin-bottom .5rem
  width 100%
  color $wash

  +above($phablet)
    font-size 16px

input:focus
  color $slate
  border-color $copper
  outline none

button:focus
  outline none
