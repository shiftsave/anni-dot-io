/*  Variables
 * -------------------------------------------------------- */

//Ease
$expo = cubic-bezier(0.19, 1, 0.22, 1)
$bounce = cubic-bezier(0.175, 0.885, 0.32, 1.275)

// Colors
$copper    = #E2A480
$slate     = #000
$concrete  = #EAEAEA
$wash      = #BDBDBD
$light     = #F8F8F8

// Fonts
$headline-font = 'Reglo-Bold', sans-serif
$subheadline-font = 'WorkSans-Medium', sans-serif
$body-font = 'WorkSans-Regular', sans-serif

// Breakpoints
$xl-desktop = 1400px
$lg-desktop = 1200px
$desktop = 1000px
$tablet = 700px
$phone = 400px

// Padding & Spacing
$lg-padding = 60px
$sm-padding = 20px


/*  Imports
 * -------------------------------------------------------- */

@import '_reset'
@import '_mixins'
@import '_fonts'
@import '_base'
@import '_utils'

@import '_header'
@import '_footer'
@import '_homepage'

@import './modules/*'
